<body>
    <!--header-->
    <% include top %>
        <div class="container">
            <div class="check">
                <h1>My Shopping Bag </h1>
                <div class="col-md-9 cart-items">
                    <script src="/socket.io/socket.io.js"></script>
                    <% items.forEach(item=>{ %>
                        <script>
                            $(document).ready(function(c) {
                                $('#<%= item._id%>').on('click', function(c) {
                                    var socket = io.connect('/');
                                    let id = "<%= item._id %>";
                                    let clientID = "<%= req.cookies.id%>";
                                    let data = {
                                        id: id,
                                        clientID: clientID,
                                    };
                                    socket.emit('remove', data);
                                    $('#<%= item._id%>1').fadeOut('slow', function(c) {
                                        $('#<%= item._id%>1').remove();
                                    });
                                    let total = document.getElementById('total');
                                    let last_total = document.getElementById('last_total');
                                    let previousPrice = total.innerHTML;
                                    previousPrice = previousPrice.slice(0, previousPrice.length - 3);
                                    let followingPrice = Number(previousPrice) - Number("<%= item.product[0].price%>");
                                    total.innerHTML = followingPrice + "VND";
                                    last_total.innerHTML = total.innerHTML;
                                });
                            });
                        </script>
                        <div class="cart-header" id="<%= item._id%>1">
                            <div class="close1" id="<%= item._id%>"> </div>
                            <div class="cart-sec simpleCart_shelfItem">
                                <div class="cart-item cyc">
                                    <img src="<%= item.product[0].image %>" class="img-responsive" alt="" />
                                </div>
                                <div class="cart-item-info">
                                    <h3>
                                        <a href="#">
                                            <%= item.product[0].name %>
                                        </a><span>Model No: 3578</span></h3>
                                    <ul class="qty">
                                        <li>
                                            <p>Size : 5</p>
                                        </li>
                                        <li>
                                            <p>Qty : 1</p>
                                        </li>
                                        <li>
                                            <p>Price :
                                                <%= item.product[0].price %>VND
                                            </p>
                                        </li>
                                    </ul>

                                    <div class="delivery">
                                        <p>Service Charges : Rs.100.00</p>
                                        <span>Delivered in 2-3 bussiness days</span>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>

                            </div>
                        </div>
                        <% });%>
                </div>
                <div class="col-md-3 cart-total">
                    <a class="continue" href="/">Continue to basket</a>
                    <div class="price-details">
                        <h3>Price Details</h3>
                        <span>Total</span>
                        <span class="total1" id='total'><%= total_price%>VND</span>
                        <span>Discount</span>
                        <span class="total1">---</span>
                        <span>Delivery Charges</span>
                        <span class="total1">0</span>
                        <div class="clearfix"></div>
                    </div>
                    <ul class="total_price">
                        <li class="last_price">
                            <h4>TOTAL</h4>
                        </li>
                        <li class="last_price" id='last_total'><span><%= total_price%>VND</span></li>
                        <div class="clearfix"> </div>
                    </ul>


                    <div class="clearfix"></div>
                    <a class="order" href="/order">Place Order</a>
                    <div class="total-item">
                        <h3>OPTIONS</h3>
                        <h4>COUPONS</h4>
                        <a class="cpns" href="#">Apply Coupons</a>
                        <p><a href="#">Log In</a> to use accounts - linked coupons</p>
                    </div>
                </div>

                <div class="clearfix"> </div>
            </div>
        </div>


        <!--//content-->
        <div class="footer">
            <div class="container">
                <div class="footer-top-at">

                    <div class="col-md-4 amet-sed">
                        <h4>MORE INFO</h4>
                        <ul class="nav-bottom">
